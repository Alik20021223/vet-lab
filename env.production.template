# Production Environment Variables Template
# Copy this file to .env.production and fill in your values

# ===========================================
# DATABASE
# ===========================================
DB_PASSWORD=your-strong-database-password-here

# ===========================================
# JWT SECRETS (Generate strong random strings!)
# Use: openssl rand -base64 32
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
REFRESH_SECRET=your-super-secret-refresh-key-minimum-32-characters-long

# ===========================================
# CORS ORIGIN
# ===========================================
# Your domain or IP address
CORS_ORIGIN=https://yourdomain.com
# For multiple origins, use comma-separated:
# CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# ===========================================
# FRONTEND API URL
# ===========================================
# URL where frontend will connect to backend API
VITE_API_URL=https://yourdomain.com/api
# Or for development/testing with IP:
# VITE_API_URL=http://your-server-ip/api

# ===========================================
# NOTIFICATIONS (Contact Form)
# ===========================================

# --- Telegram Bot ---
# Get from @BotFather in Telegram
# 1. Open Telegram, find @BotFather
# 2. Send: /newbot
# 3. Follow instructions
# 4. Copy the TOKEN
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Your Chat ID (where messages will be sent)
# Get from: https://api.telegram.org/botYOUR_TOKEN/getUpdates
# Send a message to your bot first, then check the URL
TELEGRAM_CHAT_ID=123456789

# --- Email SMTP ---
# For Gmail:
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
# Your Gmail address
SMTP_USER=your-email@gmail.com
# App Password (NOT your regular password!)
# Get from: https://myaccount.google.com/apppasswords
SMTP_PASS=your-16-char-app-password
# From address (same as SMTP_USER)
SMTP_FROM=your-email@gmail.com
# Where to receive notifications
NOTIFICATION_EMAIL=admin@yourdomain.com

